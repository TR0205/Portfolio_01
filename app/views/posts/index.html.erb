<h2 class="main-logo">ホーム2</h2>
<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}")%>
          </div>
          <div class="post-user-content">
            <%= simple_format(link_to(post.content, "/posts/#{post.id}")) %>
          </div>
          <div class="post-index-bottom">
            <div class="post-icon">
              <% if Like.find_by(user_id: @current_user.id, post_id: post.id) %>
                <%= link_to("/likes/#{post.id}/destroy_index", {method: "post"}) do %>
                <span class="fa fa-heart like-btn-unlike"></span>
                <% end %>
              <% else %>
                <%= link_to("/likes/#{post.id}/create_index", {method: "post"}) do %>
                <span class="fa fa-heart like-btn"></span>
                <% end %>
              <% end %>
            </div>
            <div class="post-count">
              <%= Like.where(post_id: post.id).count %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @posts_page %>
  </div>
</div>