<h1 class="main-logo">ユーザー一覧</h1>
<div class="main users-index">
  <div class="container">
    <% @users.each do |user| %>
      <div class="users-index-item">
        <div class="users-index-left">
          <img src="<%= "/user_images/#{user.image_name}" %>">
        </div>
        <div class="users-index-right">
          <div class="users-index-name">
            <%= link_to(user.name, "/users/#{user.id}")%>
          </div>
          <div class="users-index-text">
            <% User.find_by(id: user.id) %>
            <%= user.user_text %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% @users.each do |user| %>
  <hr>
  <p><span>email: </span><%= link_to user.email, user_path(user.id) %></p>
    <% if current_user != user %>
      <% if user.followed_by?(current_user) %>
        <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
      <% else %>
        <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
      <% end %>
    <% end %>
<% end %>
